<?xml version="1.0" encoding="UTF-8"?>
<web-app >
  <display-name>Log4jWebDemo2</display-name>
  <context-param>
    <param-name>log4j-config-location</param-name>
    <param-value>WEB-INF/log4j.properties</param-value>
  </context-param>
  <listener>
    <listener-class>com.realcoderz.servlets.ContextListener</listener-class>
  </listener>
  <servlet>
    <display-name>TestServlet</display-name>
    <servlet-name>TestServlet</servlet-name>
    <servlet-class>com.realcoderz.servlets.AccountantLogin</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TestServlet</servlet-name>
    <url-pattern>/AccountantLogin</url-pattern>
  </servlet-mapping>
</web-app>